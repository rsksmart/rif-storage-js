    "Swarm",
    "RSK"
  ],
  "homepage": "https://github.com/rsksmart/rif-storage-js",
  "bugs": {
    "url": "https://github.com/rsksmart/rif-storage-js/issues/"
  },
  "license": "MIT",
  "files": [
    "types",
    "lib",
    "dist"
  ],
  "main": "lib/index.js",
  "browser": {
    "./lib/swarm-mini/utils/data.js": "./lib/swarm-mini/utils/data.browser.js",
